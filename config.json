{
  "app": {
    "name": "Gestión de Stock - Bar de Jose",
    "version": "1.1.0",
    "author": "Bar La Nueva Flor"
  },
  "database": {
    "name": "stock.db",
    "backup_retention_days": 30
  },
  "ui": {
    "window_size": {
      "width": 1200,
      "height": 900
    },
    "theme": "dark"
  },
  "defaults": {
    "currency": "€",
    "date_format": "%d/%m/%Y",
    "decimal_places": 2
  },
  "alerts": {
    "umbral_exceso_stock": 10.0,
    "dias_vencimiento_alerta": 7,
    "dias_sin_compra_alerta": 30
  }
}